{
    "compilerOptions": {
      "lib": ["es2020", "dom"],
      "module": "commonjs",
      "target": "es2019",
  
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true,
  
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,

    },
    "include": ["src/**/*"],
    "exclude": [
  "./tests/",
  "./node_modules/",
  "./dist/"
]
  }
  